{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
